@model Users
@* This is correct for registration, as you're collecting all User fields *@

@{
    ViewData["Title"] = "Register for Cake App";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">

            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Welcome! Register Here</h2>
                    <p class="card-text text-center text-muted mb-4">Create your account to start ordering delicious
                        cakes!</p>

                    @* Alert for "Email Already Exists" *@
                    @if (TempData["exist"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert"> @* Changed to alert-danger for error *@
                            <strong>Alert!</strong> @TempData["exist"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="Register" asp-controller="Home" method="post"> @* Changed asp-controller to Account *@
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div> @* Display general model errors *@

                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">First Name</label> @* Added proper label text *@
                            <input type="text" class="form-control" asp-for="FirstName"
                                placeholder="Enter your first name">
                            <span asp-validation-for="FirstName" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Last Name</label> @* Added proper label text *@
                            <input type="text" class="form-control" asp-for="LastName"
                                placeholder="Enter your last name">
                            <span asp-validation-for="LastName" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email address</label> @* Added proper label text *@
                            <input type="email" class="form-control" asp-for="Email" placeholder="Enter email"
                                autofocus> @* Added type="email" and autofocus *@
                            <span asp-validation-for="Email" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="mb-4"> @* Slightly more margin for the last input before the button *@
                            <label asp-for="Password" class="form-label">Password</label> @* Added proper label text *@
                            <input type="password" class="form-control" asp-for="Password" placeholder="Enter password">
                            @* Changed type to password *@
                            <span asp-validation-for="Password" class="text-danger mt-1 d-block"></span>
                        </div>
                        <div class="mb-4"> @* Slightly more margin for the last input before the button *@
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label> @* Added proper label text *@
                            <input type="password" class="form-control" asp-for="ConfirmPassword"
                                placeholder="Confirm password">
                            @* Changed type to password *@
                            <span asp-validation-for="ConfirmPassword" class="text-danger mt-1 d-block"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3"> @* Full-width button with bottom margin *@
                            <button type="submit" class="btn btn-primary btn-lg">Register</button>
                        </div>
                    </form>

                    <div class="text-center mt-3"> @* Centered link below the form *@
                        <span>Already Registered? <a asp-action="Login" asp-controller="Home">Login here</a></span>
                        @* Changed asp-controller to Account *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}